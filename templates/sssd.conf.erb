[domain/<%= scope['easy_ipa::domain'] %>]

cache_credentials = True
krb5_store_password_if_offline = True
ipa_domain = <%= scope['easy_ipa::domain'] %>
id_provider = ipa
auth_provider = ipa
access_provider = ipa
ipa_hostname = <%= @fqdn %>
chpass_provider = ipa
ipa_server = _srv_, <%= scope['easy_ipa::ipa_master_fqdn'] %>
ldap_tls_cacert = /etc/ipa/ca.crt
[sssd]
services = nss, sudo, pam, ssh

domains = <%= scope['easy_ipa::domain'] %>
[nss]
homedir_substring = /home

